@model Assignment.Models.FolksViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<b>
    List of Folks details
</b>
<br />
<br />
<style>
    table, td, th {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th {
        border: 1px solid white;
        background-color: black;
        color: white;
    }
</style>
@using (@Html.BeginForm("Index", "Home"))
{
    var grid = new WebGrid(Model.FolksDetails, canSort: false);

    <div>
        @grid.GetHtml(columns:
                                grid.Columns
                                (
                                    grid.Column("Id", "Id"),
                                    grid.Column("FirstName", "FirstName"),
                                    grid.Column("LastName", "LastName"),
                                    grid.Column("BirthLocation", "BirthLocation"),
                                    grid.Column("Bio", "Bio")
                                ), mode: WebGridPagerModes.Numeric)
    </div>
}
